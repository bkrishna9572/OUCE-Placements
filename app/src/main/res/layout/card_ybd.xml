<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardybd" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="2dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#899074"

        android:padding="3dp">


        <TextView
            android:id="@+id/compName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="4dp"
            android:padding="3dp"
            android:textColor="#555"
            android:textSize="@dimen/abc_text_size_medium_material"
            android:textStyle="bold"/>
        <LinearLayout
            android:id="@+id/payLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/compName"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/designation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:padding="3dp"
                android:textColor="#555"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:padding="3dp"
                android:textColor="#555"
                android:textSize="12sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/payLine"
            android:layout_margin="5dp"

            android:layout_marginTop="5dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/lastdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:padding="3dp"
                android:textColor="#555"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/eligible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:padding="3dp"
                android:textColor="#555"
                android:textSize="12sp"
                />
            <Button
                android:id="@+id/apply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:padding="3dp"
                android:textColor="#555"
                android:textSize="12sp"
                />
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>